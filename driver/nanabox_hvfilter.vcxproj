  <!--
    Disable INF verification and Inf2Cat for all builds.
    This is necessary because:
    1. GitHub Actions runners don't have complete WDK tools (InfVerif.dll missing)
    2. The Inf2Cat tool expects the .sys in a different location than OutDir specifies
    The driver compiles correctly - these are just post-build validation steps.
    For production use, the driver should be signed with a proper code signing certificate.
  -->
  <PropertyGroup>
    <!-- Disable INF verification (InfVerif.dll not available on CI) -->
    <InfVerif_TargetInfFile />
    <!-- Disable driver signing -->
    <DriverSign>Off</DriverSign>
    <SignMode>Off</SignMode>
    <!-- Disable Inf2Cat (catalog generation) - empty os list disables it -->
    <Inf2CatWindowsVersionList />
  </PropertyGroup>
